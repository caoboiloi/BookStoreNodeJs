<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="../assets/img/favicon.png">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>
    Material Dashboard by Creative Tim
  </title>
  <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
  <%- include ../component/admin/cdn.ejs %>
</head>

<body class="tablePage">
  <div class="wrapper ">
    <%- include ../component/admin/sidebar.ejs %>
    <div class="main-panel">
      <!-- Navbar -->
      <%- include ../component/admin/narbar.ejs %>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title ">Danh sách đơn hàng</h4>
                  <p class="card-category"> đơn hàng chưa xác thực & đơn hàng hoàn thành</p>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class=" text-primary">
                        <th>
                          ID đơn hàng
                        </th>
                        <th>
                          ID khách hàng
                        </th>
                        <th>
                          Tên khách hàng
                        </th>
                        <th>
                          Ngày đặt hàng
                        </th>
                        <th>
                          Ngày giao dự kiến
                        </th>
                        <th>
                          Nhà vận chuyển
                        </th>
                        <th>
                          Phí giao hàng
                        </th>
                        <th>
                          Tổng tiền hàng
                        </th>
                        <th>
                          Tổng hoá đơn
                        </th>
                        <th colspan="2">
                          Tình trạng
                        </th>
                      </thead>
                      <tbody>
                        <% buys.forEach(b => { %>
                          <tr>
                            <td>
                              <a href="/admin/buys?id=<%= b._id %>"><%= b._id.toString().substring(0,8) %>...</a>
                            </td>
                            <td>
                              <a href="/admin/customer?id=<%= b.user._id %>"><%= b.user._id.toString().substring(0,8) %>...</a>
                            </td>
                            <td>
                              <%= b.user.name %>
                            </td>
                            <td>
                              <%= moment(b.orderDate).format('HH:mm DD/MM/YYYY') %>
                            </td>
                            <td>
                              <%= moment(b.deliveryDate).format('HH:mm DD/MM/YYYY') %>
                            </td>
                            <td>
                              <%= b.shipper.item.name %>
                            </td>
                            <td class="text-primary">
                              <%= b.shipper.price %>
                            </td>
                            <td class="text-primary">
                              <%= b.totalPrice.toLocaleString() %>
                            </td>
                            <td class="text-primary">
                              <%= (b.totalPrice + b.shipper.price).toLocaleString() %>
                            </td>
                            <% if (b.validation) { %>
                              <% if (b.receive.check) { %>
                                <td>
                                  Đã nhận hàng
                                </td>
                              <% } else { %>
                                <td>
                                  Đang giao hàng
                                </td>
                              <% } %>
                            <% } else { %>
                              <% if (b.cancel.check) { %>
                                <td>
                                  Đã huỷ
                                </td>
                              <% } else { %>
                                <td>
                                  Đang xác thực
                                </td>
                                <td>
                                  <button type="button" rel="tooltip" title="Xác thực" onclick="checkPurchaseForUser(this)" data-buy="<%= b._id %>" class="btn btn-primary btn-link btn-sm">
                                    <i class="material-icons">check</i>
                                  </button>
                                </td>
                              <% } %>
                            <% } %>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="card card-plain">
                <div class="card-header card-header-primary">
                  <h4 class="card-title mt-0"> Danh sách tài khoản khách hàng</h4>
                  <p class="card-category"> Tên, username, địa chỉ,...</p>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead class="">
                        <th width ="120px" >
                          Ảnh đại diện
                        </th>
                        <th>
                          ID
                        </th>
                        <th>
                          Họ và tên
                        </th>
                        <th>
                          Địa chỉ
                        </th>
                        <th>
                          Số điện thoại
                        </th>
                        <th>
                          Email
                        </th>
                      </thead>
                      <tbody>
                        <% users.forEach(u => { %>
                          <tr>
                            <td>
                              <% if (u.image) { %>
                                <img src="<%= u.image %>" alt="" width="50px" height="50px">
                              <% } else { %>
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" width="50px" height="50px">
                              <% } %>
                            </td>
                            <td>
                              <a href="/admin/customer?id=<%= u._id %>"><%= u._id.toString().substring(0,9) %>...</a>
                            </td>
                            <td>
                              <%= u.name %>
                            </td>
                            <td>
                              <%= u.street %>, <%= u.district %>, <%= u.city %>
                            </td>
                            <td>
                              <%= u.phone %>
                            </td>
                            <td>
                              <%= u.email %>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include ../component/admin/footer.ejs %>
    </div>
  </div>
  <%- include ../component/admin/fixed-plugin.ejs %>

  <%- include ../component/message-alert.ejs %>

  <%- include ../component/admin/scripts-fixed-plugin.ejs %>
</body>
<script>
function checkPurchaseForUser(element) {
      const id = element.dataset.buy
      fetch('../admin/api/buys/validation', {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({id})
      }).then(res => res.text())
      .then(data => {
        data = JSON.parse(data)
        if (data.status) {
          $('.messsageAlertPage #message-alert-show .content').html(data.message)
          $('.messsageAlertPage #message-alert-show').fadeIn();

          setTimeout(() => {
              $('.messsageAlertPage #message-alert-show').fadeOut();
              location.reload();
          },1000)
        }
        else {
          $('.messsageAlertPage #message-alert-show .content').html(data.error)
          $('.messsageAlertPage #message-alert-show').fadeIn();

          setTimeout(() => {
              $('.messsageAlertPage #message-alert-show').fadeOut();
          },3000)
        }
      }).catch(e => {
        $('.messsageAlertPage #message-alert-show .content').html(e.message)
        $('.messsageAlertPage #message-alert-show').fadeIn();

        setTimeout(() => {
            $('.messsageAlertPage #message-alert-show').fadeOut();
        },3000)
      })
    }
</script>
</html>